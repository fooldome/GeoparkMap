<h1>Add New Event</h1>
<form id="addEvents" action="/api/addEvents" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category">
            <option value="events">Event</option>
        </select>
    </div>
    <div class="form-group">
        <label for="streetAddress">Street Address</label>
        <input name="streetAddress" type="text">
    </div>
    <div class="form-group">
        <label for="cityTown">City/Town</label>
        <input name="cityTown" type="text">
    </div>
    <div class="form-group">
        <label for="postcode">Postcode</label>
        <input name="postcode" type="text">
    </div>
    <div class="form-group">
        <label for="longitude">Longitude</label>
        <input name="longitude" type="text">
    </div>
    <div class="form-group">
        <label for="latitude">Latitude</label>
        <input name="latitude" type="text">
    </div>
    <div class="form-group">
        <label for="startDate">Start Date</label>
        <input name="startDate" type="text">
    </div>
    <div class="form-group">
        <label for="endDate">End Date</label>
        <input name="endDate" type="text">
    </div>
    <div class="form-group">
        <label for="openingTimes">Opening Times</label>
        <input name="openingTimes" type="text">
    </div>
    <div class="form-group">
        <label for="shortDescription">Short Description</label>
        <textarea name="shortDescription" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label for="link">Web Link</label>
        <input name="link" type="text">
    </div>
    <div class="form-group">
        <label for="imageName">Image Name 1</label>
        <input name="imageName" type="text">
    </div>
    <div class="form-group">
        <label for="imageName2">Image Name 2</label>
        <input name="imageName2" type="text">
    </div>
    <div class="form-group">
        <label for="videoLink">Video Link</label>
        <input name="videoLink" type="text">
    </div>

    <div class="form-group">
        <p><strong>Toilets</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="toilets" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="toilets" value="false">
            </label>
        </div>
    </div>
    <div class="form-group">
        <p><strong>Food</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="food" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="food" value="false">
            </label>
        </div>
    </div>
    <div class="form-group">
        <p><strong>Parking</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="parking" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="parking" value="false">
            </label>
        </div>
    </div>
    <div class="form-group">
        <p><strong>Wheel Chair Access</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="wheelChairAccess" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="wheelChairAccess" value="false">
            </label>
        </div>
    </div>
    <div class="form-group">
        <p><strong>Dog Friendly</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="dogFriendly" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="dogFriendly" value="false">
            </label>
        </div>
    </div>
    <div class="form-group">
        <p><strong>Show Large</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="showLarge" value="true">
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="showLarge" value="false">
            </label>
        </div>
    </div>

    <button class="submitBTN u-full-width" type="submit">Submit</button>
</form>
