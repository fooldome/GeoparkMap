<h1>Edit {{this.name}}</h1>
<form class="RouteForms" id="addRoutes" action="/api/updateRoute/{{this._id}}" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="{{this.name}}">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id='category'>
            <option value="{{this.category}}">{{this.category}}</option>
            <option value="walks">Walks</option>
            <option value="cycle">Cycling</option>
            <option value="grass">Sea Grass</option>

        </select>
    </div>
    <div class="form-group">
        <label for="longitude">Longitude</label>
        <input name="longitude" type="text" value="{{this.longitude}}">
    </div>
    <div class="form-group">
        <label for="latitude">Latitude</label>
        <input name="latitude" type="text" value="{{this.latitude}}">
    </div>

    <div class="form-group">
        <label for="shortDescription">Short Description</label>
        <textarea name="shortDescription" rows="4">{{this.shortDescription}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageName">Image Name</label>
        <input name="imageName" type="text" value="{{this.imageName}}">
    </div>


    <button class="submitBTN" type="submit">Submit</button>
</form>
