<h1>Edit {{this.name}}</h1>
<form class="EventForms" id="addEvents" action="/api/updateEvent/{{this._id}}" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="{{this.name}}">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id='category'>
            <option value="{{this.category}}">{{this.category}}</option>
            <option value="events">Event</option>

        </select>
    </div>
    <div class="form-group">
        <label for="streetAddress">Street Address</label>
        <input name="streetAddress" type="text" value="{{this.streetAddress}}">
    </div>
    <div class="form-group">
        <label for="cityTown">City/Town</label>
        <input name="cityTown" type="text" value={{this.cityTown}}>
    </div>
    <div class="form-group">
        <label for="postcode">Postcode</label>
        <input name="postcode" type="text" value="{{this.postcode}}">
    </div>
    <div class="form-group">
        <label for="longitude">Longitude</label>
        <input name="longitude" type="text" value="{{this.longitude}}">
    </div>
    <div class="form-group">
        <label for="latitude">Latitude</label>
        <input name="latitude" type="text" value="{{this.latitude}}">
    </div>
    <div class="form-group">
        <label for="startDate">Start Date</label>
        <input name="startDate" type="text" value="{{this.startDate}}">
    </div>
    <div class="form-group">
        <label for="endDate">End Date</label>
        <input name="endDate" type="text" value="{{this.endDate}}">
    </div>
    <div class="form-group">
        <label for="openingTimes">Opening Times</label>
        <input name="openingTimes" type="text" value="{{this.openingTimes}}">
    </div>
    <div class="form-group">
        <label for="shortDescription">Short Description</label>
        <textarea name="shortDescription" rows="4">{{this.shortDescription}}</textarea>
    </div>
    <div class="form-group">
        <label for="link">Web Link</label>
        <input name="link" type="text" value="{{link}}">
    </div>
    <div class="form-group">
        <label for="imageName">Image Name 1</label>
        <input name="imageName" type="text" value="{{this.imageName}}">
    </div>
    <div class="form-group">
        <label for="imageName2">Image Name 2</label>
        <input name="imageName2" type="text" value="{{this.imageName2}}">
    </div>
    <div class="form-group">
        <label for="videoLink">Video Link</label>
        <input name="videoLink" type="text" value="{{this.videoLink}}">
    </div>

    {{#if this.toilets}}
    <div class="form-group">
        <p><strong>Toilets</strong></p>
        <div class="checkBoxContainer">
            <label for="yes">
                <span class="label-body">Yes</span>
                <input type="radio" id="yes" name="toilets" value="true" checked>
            </label>
            <label for="no">
                <span class="label-body">No</span>
                <input type="radio" id="no" name="toilets" value="false">
            </label>
        </div>
    </div>
    {{else}}
